{% extends "layout.njk" %}

{% block content %}

    <div class="recipe_image-container">
        <img src="{{item.image}}" alt="{{item.title}}">
    </div>

    <div class="recipe">
        <div class="recipe-info">
            <h1>{{item.title}}</h1>
            <p>{{item.author}}</p>
        </div>
        
        <h2>Ingredientes <span class="btn-show"></span></h2>

        <ul class="recipe-list btn-show-event">
        
            {% for ingredient in item.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>

        <h2>Modo de preparo <span class="btn-show">e</span></h2>

        <ul class="recipe-list btn-show-event">
            {% for step in item.preparation %}
                <li>{{step}}</li>
            {% endfor %}

        </ul>

        <h2 class="{{'' if item.information else 'no-information'}}">Informações Adicionais <span class="btn-show"></span></h2>

        <p class="btn-show-event" style="margin-bottom: 16px">{{item.information}}</p>

    </div>

    <script src="/scripts.js"></script>

{% endblock %}