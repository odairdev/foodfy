{% extends "layout.njk" %}

{% block head %}
    <title>FoodFy - Receitas</title>
{% endblock %}

{% block content %}
    <section class="cards">

        {% for item in items %}

            <div class="card" id="{{loop.index0}}">
                <div class="card_img-content">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div class="card-content">
                    <p class="card-title">{{item.title}}</p>
                    <p class="card-autor">{{item.author}}</p>
                </div>
            </div>

        {% endfor %}

        {% for item in items %}

            <div class="card" id="burger">
                <div class="card_img-content">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div class="card-content">
                    <p class="card-title">{{item.title}}</p>
                    <p class="card-autor">{{item.author}}</p>
                </div>
            </div>

        {% endfor %}
    
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-image">
                <img src="" alt="">
            </div>
            <div class="modal-content">
                <p class="modal-title"></p>
                <p class="modal-autor">por Vania Steroski</p>
            </div>
            <div class="modal-close">
                <p>Fechar modal</p>
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>

{% endblock%}