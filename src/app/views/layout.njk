<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>FoodFy</title>
        {% endblock %}
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div class="content-wrap">
            <header>
                <div class="logo-img">
                <a href="/"><img src="/assets/logo.png" alt="logo Foofy"></a> 
                </div>
                <div class="links">
                    <a href="/about">Sobre</a>
                    <a href="/recipes">Receitas</a>
                    <a href="/chefs">Chefs</a>
                </div>
                <div>
                    <form action="/recipes" method="get" class="form-filter">
                        <input type="text" name="filter" placeholder="Procurar por receita">
                        <button type="submit" class="button btn-filter">Buscar</button>
                    </form>
                </div>
            </header>

            {% block content %}

            {% endblock %}
        </div>

        <footer>
            <div id="footer-links" class="links">Todos direitos reservados, receitas Foodfy.</div>
        </footer>

        <script>
            const menuLinks = document.querySelectorAll("header .links a")
            const currentPage = location.pathname
                
            for (link of menuLinks) {
                if (currentPage.includes(link.getAttribute('href'))) {
                    link.classList.add("active")
                }
            }
        </script>
    </body>
</html>