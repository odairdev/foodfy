{% extends "layout.njk" %}

{% block head %}
    <title>FoodFy - Receitas</title>
{% endblock %}

{% block content %}

    <section class="cards">

        {% for item in items %}

            <div class="card" id="{{loop.index0}}">
                <div class="card_img-content">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div class="card-content">
                    <p class="card-title">{{item.title}}</p>
                    <p class="card-autor">{{item.author}}</p>
                </div>
            </div>

        {% endfor %}

        {% for item in items %}

            <div class="card" id="burger">
                <div class="card_img-content">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div class="card-content">
                    <p class="card-title">{{item.title}}</p>
                    <p class="card-autor">{{item.author}}</p>
                </div>
            </div>

        {% endfor %}
    
    </section>

    <script src="/scripts.js"></script>

{% endblock%}