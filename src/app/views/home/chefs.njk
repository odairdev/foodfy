{% extends "layout.njk" %}

{% block content %}

<div class="chef-cards">
    {% for chef in chefs %}
        <div class="chef-card">
            <a href="/admin/chefs/{{chef.id}}"><img src="{{chef.avatar_url}}" alt="Avatar de {{chef.name}}"></a>
            <div class="chef-card_content">
                <p class="card-title">{{chef.name}}</p>
                <p class="admin-card-author">{{chef.total_recipes}} receitas</p>
                
            </div>
        </div>
    {% endfor %}
</div>

{% endblock content %}