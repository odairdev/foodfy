{% extends "layout_admin.njk" %}

{% block content %}

<div class="headline-container">
    <div>
        <h2 class="admin-h2">Gerenciar Receitas</h2>
    </div>
    <div><a href="/admin/recipes/create" class="button">Nova Receita</a></div>
    
</div>


<div class="admin-cards">
    {% for recipe in recipes %}
        <div class="admin-card">
            <div class="admin-card_img-content">
                <img src="{{recipe.image}}" alt="">
            </div>
            <div class="admin-card-content">
                <p class="admin-card-title">{{recipe.title}} </p>
                <p class="admin-card-author">{{recipe.chef_name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock content %}
