{% extends "layout_admin.njk" %}

{% block content %}

<h2 class="admin-h2" style="float: left;">Editando Receita</h2>

<form action="/admin/recipes?_method=PUT" method="post">
    <input type="hidden" name="id" value="{{recipe.id}}">

    {% include "admin/recipes/fields.njk" %}

    <button type="submit" class="button btn-edit" style="margin-left: 24px;">Salvar</button>
</form>

<form id="form-delete" action="/admin/recipes?_method=DELETE" method="post">
    <input type="hidden" name="id" value="{{recipe.id}}">
    <button type="submit" class="button btn-edit" style="background: lightcoral;">Deletar</button>
</form>

{% include "confirm.njk" %}

{% endblock content %}