{% extends "layout_admin.njk" %}

{% block content %}
<div class="headline-container">
    <div><h2>Editando Chef</h2></div>
    <div>
        <button type="submit" class="button" form="create-form">Salvar</button>
        <button type="submit" class="button" form="form-delete" style="background-color: #f08080;">Deletar</button>
    </div>
</div>

<form action="/admin/chefs?_method=PUT" method="post" id="create-form">

{% include 'admin/chefs/fields.njk'%}

<input type="hidden" name="id" value="{{chef.id}}">

</form>

<form action="/admin/chefs?_method=DELETE" method="post" id="form-delete">
    <input type="hidden" name="id" value="{{chef.id}}">
    <input type="hidden" name="recipes" value="{{recipes.length}}">
</form>

{% include "confirm.njk" %}

{% endblock content %}

