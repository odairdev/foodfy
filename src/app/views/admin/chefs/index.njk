{% extends 'layout_admin.njk' %}

{% block content %}

<div class="headline-container">
    <div><h2>Gerenciar Chefs</h2></div>
    <div><a href="/admin/chefs/create" class="button">Novo Chef</a></div>
</div>

<div class="chef-cards">
    {% for chef in chefs %}
        <div class="chef-card">
            <img src="{{chef.avatar_url}}" alt="Avatar de {{chef.name}}">
            <div class="chef-card_content">
                <p class="card-title">{{chef.name}}</p>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}
</div>


{% endblock content %}

